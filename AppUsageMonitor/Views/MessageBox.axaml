<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="50"
        x:Class="AppUsageMonitor.Views.MessageBox" SizeToContent="WidthAndHeight" CanResize="False" Background="Transparent">
    <StackPanel HorizontalAlignment="Center" Width="200" Height="100" Background="Transparent">
        <TextBlock HorizontalAlignment="Center" Name="Text" Foreground="Red" FontWeight="Bold" />
        <DockPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Name="Buttons" Background="#A0E6E6E6" Width="200" Height="80">
                <StackPanel.Styles>
                    <Style Selector="Button">
                        <Setter Property="Width" Value="100" />
                        <Setter Property="Height" Value="50" />
                        <Setter Property="HorizontalAlignment" Value="Right" /> <!--调不到居中，不调了，草-->
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Foreground" Value="#D202FFFF" />
                    </Style>
                </StackPanel.Styles>

            </StackPanel>
        </DockPanel>
    </StackPanel>
</Window>